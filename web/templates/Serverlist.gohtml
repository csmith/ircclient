<div id="servers" data-on-wheel="evt.wheelDelta > 0 ? @get('/nextWindowUp') : @get('/nextWindowDown')">
    <ul>
        {{ range .Parents }}
            <li>
                <div>
                    <a class="{{ if .Window.IsActive }}active{{ end }}{{ if .Window.IsUnread }}unread{{ end }}"
                       data-on-click="@get('/changeWindow/{{ .Link }}'); evt.preventDefault()"
                       href="/s/{{.Link}}"
                    >{{ .Window.GetName }}</a>
                </div>
                {{ if gt (len .Children) 0 }}
                    <ul>
                        {{ range .Children }}
                            <li>
                                <div>
                                    <a class="{{ if .Window.IsActive }}active{{ end }}{{ if .Window.IsUnread }}unread{{ end }}"
                                       data-on-click="@get('/changeWindow/{{.Link}}'); evt.preventDefault()"
                                       href="/s/{{.Link}}"
                                    >{{ .Window.GetName }}</a>
                                </div>
                            </li>
                        {{ end }}
                    </ul>
                {{ end }}
            </li>
        {{ end }}
    </ul>
</div>
